# Telegram API Credentials
# Получите на https://my.telegram.org/apps

TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# Количество диалогов на странице при просмотре списка каналов/чатов
DIALOGS_PER_PAGE=20

# Ширина столбца "Название" в таблицах списка каналов/чатов (интерактивный режим)
DIALOGS_NAME_COL_WIDTH=30

# Временная зона для вывода дат и интерпретации --period-dates (IANA, например Europe/Moscow).
# Если не задано — используется UTC (GMT+0).
TIMEZONE=UTC

# Получение сообщений: размер порции и пауза между порциями
# Максимум сообщений в одной порции при получении (размер батча)
FETCH_MESSAGES_LIMIT=1000
# Пауза в секундах между порциями при постраничном получении (0 = без паузы)
FETCH_MESSAGES_PAUSE_SECONDS=1
